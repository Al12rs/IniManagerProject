<Window x:Class="INIManagerProject.OpenExistingDocumentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:INIManagerProject"
        mc:Ignorable="d"
        Title="OpenExistingDocumentWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40" Name="LabelHeader"/>
            <RowDefinition Height="*" Name="List"/>
            <RowDefinition Height="30" Name="Buttons"/>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Name="Header" Content="Existing documents"/>
        <ListView Grid.Row="1" Name="DocumentList"></ListView>
        <StackPanel Orientation="Horizontal" Grid.Row="2">
            <Button Name="OpenButton" Content="Open" Click="openButton_Click"/>
            <Button Name="CancelButton" Content="Cancel" Click="cancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>


